doctype html

div(layout='column', ng-cloak)
  //- container #1
  md-toolbar.md-toolbar-tools(layout='row')
    h1 Angular Material -- Starter App

  //- container #2
  div(layout='row', flex)

    //- container #3
    md-sidenav.md-whiterframe-4dp(md-is-locked-open='true')
      md-list
        md-list-item(ng-repeat='user in vm.users')
          md-button(
            ng-click='vm.selectUser(user)'
            ng-class='{"selected": user === vm.selected}'
          )
            md-icon.avatar(md-svg-src='assets/svg/avatar-1.svg')
            | {{user.name}}

    //- container #4
    md-content#content(flex)
      md-icon.avatar(md-svg-src='assets/svg/avatar-1.svg')
      h2 {{vm.selected.name}}
      | {{vm.selected.content}}
